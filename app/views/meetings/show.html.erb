<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-md-12">
    <div class="page-header">
      <h5><%= @meeting.date.strftime("%a %b %d") %></h5>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <div class="d-flex bd-highlight">
      <div class="p-2 flex-fill bd-highlight"><%= @meeting.home_team_name %></div>
      <div class="p-2 flex-fill bd-highlight"><%= @meeting.away_team_name %></div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <div class="d-flex bd-highlight">
      <div class="p-2 flex-fill bd-highlight">
        <nav class="nav nav-pills nav-justified justify-content-center">
          <%= @meeting.home_riders.nil? ? 
                (button_to 'Add riders', new_meeting_home_rider_path(@meeting, @home_rider), class: "btn btn-outline-dark", method: :get) : 
                (button_to 'Edit riders', edit_meeting_home_rider_path(@meeting, @home_rider ), class: "btn btn-outline-dark", method: :get) %>
        </nav>
      </div>
      <div class="p-2 flex-fill bd-highlight">
        <nav class="nav nav-pills nav-justified justify-content-center">
          <%= @meeting.away_riders.nil? ? 
                (button_to 'Add riders', new_meeting_away_rider_path(@meeting, @away_rider), class: "btn btn-outline-dark", method: :get) : 
                (button_to 'Edit riders', new_meeting_away_rider_path(@meeting, @away_rider), class: "btn btn-outline-dark") %>
        </nav>
      </div>
    </div>
  </div>
</div>


<p></p>


<div class="row">
  <div class="col-md-12">
    <%= button_to 'Add heat', new_meeting_heat_path(@meeting), class: "btn btn-small btn-block" %>
  </div>
</div>

